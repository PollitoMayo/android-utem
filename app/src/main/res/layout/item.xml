<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="false"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/hola"
        app:layout_constraintWidth_default="spread">

        <TextView
            android:id="@+id/text_codigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PPSB0002"
            android:clickable="false"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/text_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Introducción Informática Introducción Informática Introducción Informática"
            android:textStyle="bold"
            android:clickable="false"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_tipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="Obligatorio" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/hola"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toTopOf="@+id/linearLayout2">

        <TextView
            android:id="@+id/text_nota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5.2"
            android:textAlignment="center"
            android:clickable="false"
            android:textSize="28dp" />

        <TextView
            android:id="@+id/text_estado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aprobado"
            android:textAlignment="center"
            android:clickable="false"
            android:textSize="14sp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>